{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "lib": [
            "es2015",
            "es2015.promise"
        ],
        "types": [
            "node"
        ],
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "./package.json",
        "./types/index.d.ts",
        "./types/types.d.ts",
        "./types/glob.d.ts",
        "./types/modules.d.ts",
        "./types/validate-npm-package-name.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
